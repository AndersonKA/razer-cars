<div class="section">
  <div class="columns">
    <div class="column is-8 is-offset-2 is-mobile">
      <div class="title">Manufacturers</div>
      <table class="table is-bordered">
        <thead class="table-heading">
          <tr>
            <th>Manufacturer</th>
            <th>Country</th>
            <th>Number Of Models</th>
            <th> </th>
          </tr>
        </thead>

        <tbody>
          {{#each model as |value|}}

            <tr>
              <td>{{value.name}}</td>
              <td>{{value.country}}</td>
              <td>{{value.cars.length}}</td>
              <td>don't see more</td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>
