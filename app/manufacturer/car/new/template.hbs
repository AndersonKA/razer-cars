<div class="section">
  <div class="columns">
    <div class="column is-8 is-offset-2 is-mobile">

<div class="title">Add New Car for {{model.name}}</div>
<form  {{action "save" on="submit"}}>
  <div class="field">
    <label class="label"></label>
    <p class="control">
      {{input class="input" type="text" placeholder="Model Name" value=formValues.name}}
    </p>
  </div>

  <div class="field">
    <label class="label"></label>
    <p class="control">
      {{input class="input" type="text" placeholder="Year" value=formValues.year}}
    </p>
  </div>

  <div class="field">
    <label class="label"></label>
    <p class="control">
      {{input class="input" type="text" placeholder="Horsepower" value=formValues.hp}}
    </p>
  </div>

  <div class="field has-addons">
    <label class="label"></label>
      <p class="control">
        {{input class="input" type="text" placeholder="Price" value=formValues.price}}
      </p>
  </div>

  <div class="field buttons">
    <div class="control">
      <button class="button">
        Submit
      </button>
    </div>
    <div class="control">
      <button class="button">
        {{#link-to "manufacturer"}}Back{{/link-to}}
      </button>
    </div>
  </div>


</form>


    </div>
  </div>
</div>
