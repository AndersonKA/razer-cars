<div class="section">
  <div class="columns">
    <div class="column is-8 is-offset-2 is-mobile">
      <div class="title">Manufacturers</div>
      <table class="table is-bordered">
        <thead class="table-heading">
          <tr>
            <th>Manufacturer</th>
            <th>Country</th>
            <th>Number Of Models</th>
            <th> </th>
          </tr>
        </thead>

        <tbody>
          {{#each model as |brand|}}

            <tr>
              <td>{{brand.name}}</td>
              <td>{{brand.country}}</td>
              <td>{{brand.cars.length}}</td>
              <td>{{#link-to "manufacturer.car" brand.id}}read more{{/link-to}}</td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>
